<div class="articles">
  <nav>
    <div class="nav-left">

        <a id="img_logo" href="/articles">
           <%= image_tag("logo.jpg",size: "50x50") -%>
        </a>

        <ul>
            <li><a href="#">Post</a></li>
            <li><a href="#">Author</a></li>
            <li><a href="#">Tags</a></li>
        </ul>
      </div>

     <div class="nav-right">
        <li> <input type="text" name="search" placeholder="What are you looking for?" class="form-control"></li>
        <li> <button class="btn btn-default" type="submit">Search</button></li>


      </div>

</nav>



<%= link_to 'My Blog', controller: 'articles' %>
<%= link_to 'New article', new_article_path %>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  <% @article.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article), class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy', article_path(article),class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure' } %></td>
  </tr>
  <% end %>
</table>
</div>
