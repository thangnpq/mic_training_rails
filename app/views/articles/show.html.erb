<div class="show-art">
    <div class="show-page">
        <div id="image-show">
            <%= image_tag @article.image.url(:high) %>
        </div>
         <p id="title-content-show">
            <%= @article.title %>
          </p>
          <p>
            <%= @article.text %>
          </p>
          <% if @article.user == current_user %>
            <p class="btn btn-info">
               <%= link_to 'Edit', edit_article_path(@article) %>
            </p>
          <% end %>
          <p class="btn btn-info">
            <%= link_to 'Back', articles_path %>
          </p>
        <h3>Comments</h3>
          <%= render @article.comments %>
        <h3>Add a coments:</h3>
      <%= render 'comments/form' %>
    </div>
</div>

