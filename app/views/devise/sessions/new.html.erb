<div class='container sign-in'>
  <div class="rows">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 wrapper-sign-in">
      <h2 class="title">Log in</h2>

      <%= render "devise/shared/errors",flash: flash %>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', placeholder: "Email"} %>
        </div>

        <div class="form-group">
          <%= f.input :password, required: false, input_html: { class: 'form-control', placeholder: "Password" } %>
        </div>

        <div class="form-group txt-center">
          <%= f.button :submit, "Log in", class: "btn btn-danger btn-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>