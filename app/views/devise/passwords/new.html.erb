
<div class='container for-got'>
  <div class="rows">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 wrapper-forgot">
      <h2 class="title">Forgot your password?</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
               <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', placeholder: "Email"} %>
          </div>
          <div class="form-group txt-center">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-danger btn-submit" %>
          </div>
          <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
